<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="@string/add_calendar_entry_title_hint"
                android:textColor="#000"
                android:maxLines="1"
                android:maxLength="80"
                android:textSize="17sp"
                android:textColorHint="@android:color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/holo_blue_dark" />

            <ImageView
                android:id="@+id/event_description_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/black"
                android:importantForAccessibility="no"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_toStartOf="@+id/switchButton"
                    android:layout_toLeftOf="@+id/switchButton"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/add_calendar_entry_all_day"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="12dp"
                    />

                <Switch
                    android:id="@+id/switchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/addCalendarEntryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_toStartOf="@+id/add_note_add_date"
                    android:layout_toLeftOf="@+id/add_note_add_date"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ems="10"
                    android:text="@string/add_calendar_entry_date"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/add_note_add_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:clickable="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/addCalendarEntryEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="36dp"
                    android:layout_marginStart="36dp"
                    android:layout_toStartOf="@+id/addEntryEndTime"
                    android:layout_toLeftOf="@+id/addEntryEndTime"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ems="10"
                    android:text="@string/add_calendar_entry_time" />

                <TextView
                    android:id="@+id/addEntryEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:clickable="true" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/event_date_time_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/black"
                android:importantForAccessibility="no"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:contentDescription="@string/icon_for_navigation"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="-10dp"
                    android:layout_marginRight="-10dp"
                    android:clickable="false"
                    android:src="@drawable/ic_notifications_black"
                    android:paddingTop="10dp"/>

                <Spinner
                    android:id="@+id/add_calendar_entry_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_calendar_entry_reminder"
                    android:inputType="text"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp">
                </Spinner>


            </LinearLayout>

            <ImageView
                android:id="@+id/event_reminder_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/darker_gray"
                android:importantForAccessibility="no"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:contentDescription="@string/icon_for_navigation"
                    android:id="@+id/event_type_color"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="-10dp"
                    android:layout_marginRight="-10dp"
                    android:clickable="false"
                    android:src="@drawable/ic_color_lens_black_24dp"
                    android:paddingTop="10dp"/>

                <Spinner
                    android:id="@+id/add_calendar_entry_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_calendar_entry_spinner_hint"
                    android:inputType="text"
                    android:textSize="@dimen/normal_text_size"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp">
                </Spinner>
            </LinearLayout>

            <Button
                android:id="@+id/calendar_entry_location_button"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_white"
                android:clickable="true"
                android:padding="16dp"
                android:text="@string/add_calendar_entry_add_location"
                android:textAllCaps="false"
                android:textColor="#ccc"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_toStartOf="@+id/switch_button_location"
                    android:layout_toLeftOf="@+id/switch_button_location"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/add_calendar_entry_location_reminder"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="12dp"
                    />

                <Switch
                    android:id="@+id/switch_button_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="visible"/>
            </RelativeLayout>

            <Button
                android:id="@+id/addCalendarEntry"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_signup"
                android:clickable="true"
                android:padding="16dp"
                android:text="@string/add_calendar_entry_button_add"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>