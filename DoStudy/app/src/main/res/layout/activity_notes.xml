<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_top_bottom"
    android:layout_marginBottom="@dimen/margin_top_bottom"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notes_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/title_text_size"
        android:layout_marginTop="4dp"
        android:textColor="@color/holoBlue"/>

    <ListView
        android:id="@+id/notes_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_bottom_divider"
        android:layout_marginBottom="@dimen/margin_top_bottom">
    </ListView>

    <ImageView
        android:contentDescription="@string/icon_for_navigation"
        android:id="@+id/notes_add_note"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="-80dp"
        android:layout_marginBottom="@dimen/margin_top_bottom"
        android:layout_marginRight="@dimen/margin_left_right"
        android:layout_marginEnd="@dimen/margin_left_right"
        android:layout_gravity="end"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:clickable="true" />

</LinearLayout>