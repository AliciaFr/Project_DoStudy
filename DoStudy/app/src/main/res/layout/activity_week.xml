<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alicia.dostudy.TimeTable.WeekActivity"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_top_bottom"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginStart="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:layout_marginEnd="@dimen/margin_left_right" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_timetable"
        android:textSize="@dimen/title_text_size"
        android:layout_marginBottom="20dp"
        android:textColor="@color/holoBlue"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/monday"
                android:textSize="15sp"
                android:id="@+id/monday_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/tuesday"
                android:textSize="15sp"
                android:id="@+id/tuesday_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/wednesday"
                android:textSize="15sp"
                android:id="@+id/wednesday_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/thursday"
                android:textSize="15sp"
                android:id="@+id/thursday_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/friday"
                android:textSize="15sp"
                android:id="@+id/friday_button"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
