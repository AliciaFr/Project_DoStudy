<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="@string/add_calendar_entry_title_hint"
                android:textColor="#000"
                android:maxLines="1"
                android:maxLength="80"
                android:textSize="17sp"
                android:textColorHint="@android:color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/holo_blue_dark" />

            <EditText
                android:id="@+id/add_note_lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="@string/add_note_lecture_hint"
                android:maxLines="1"
                android:maxLength="80"
                android:textSize="17sp"
                android:textColor="#000"
                android:textColorHint="@android:color/black"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="@android:color/holo_blue_dark"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/black"
                android:importantForAccessibility="no"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/add_note_add_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_toStartOf="@+id/add_note_date"
                    android:layout_toLeftOf="@+id/add_note_date"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:maxLines="1"
                    android:ems="10"
                    android:text="@string/add_note_date_title"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="12dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/add_note_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="17sp"
                    android:textColor="@android:color/black"
                    android:clickable="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/black"
                android:importantForAccessibility="no"/>

            <TextView
                android:id="@+id/add_note_add_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ems="10"
                android:text="@string/add_note_add_picture"
                android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
                android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
                android:drawablePadding="12dp"
                android:clickable="true"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/black"
                android:importantForAccessibility="no"/>


            <EditText
                android:id="@+id/add_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="@string/add_notes_edit_note_hint"
                android:textColor="#000"
                android:textSize="17sp"
                android:textColorHint="@android:color/black"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/add_note_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HinzufÃ¼gen" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>