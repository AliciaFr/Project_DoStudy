<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_top_bottom"
        android:layout_marginBottom="@dimen/margin_top_bottom"
        android:layout_marginLeft="@dimen/margin_left_right"
        android:layout_marginRight="@dimen/margin_left_right" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:contentDescription="@string/content_description_logo"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/ic_logo_owl"
                android:layout_marginBottom="@dimen/margin_top_bottom"/>


                <Button
                    android:id="@+id/home_todo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white"
                    android:text="@string/todo"
                    android:textColor="@color/holoBlue"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginBottom="@dimen/margin_top_bottom"/>

                <Button
                    android:id="@+id/home_timetable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white"
                    android:text="@string/timetable"
                    android:textColor="@color/holoBlue"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginBottom="@dimen/margin_top_bottom"/>

                <Button
                    android:id="@+id/home_grades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white"
                    android:text="@string/grades_title"
                    android:textColor="@color/holoBlue"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginBottom="@dimen/margin_top_bottom"/>

                <Button
                    android:id="@+id/home_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white"
                    android:text="@string/notes_title"
                    android:textColor="@color/holoBlue"
                    android:textSize="@dimen/button_text_size"
                    android:layout_marginBottom="@dimen/margin_top_bottom"/>

                <Button
                    android:id="@+id/home_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white"
                    android:text="@string/calendar"
                    android:textColor="@color/holoBlue"
                    android:textSize="@dimen/button_text_size"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>