<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo_owl"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_todo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/holoBlue"
                android:layout_margin="10dp"
                android:text="@string/todo"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_todo_list_icon"
                android:drawableEnd="@drawable/ic_todo_list_icon"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/home_timetable"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/holoBlue"
                android:layout_margin="10dp"
                android:text="@string/timetable"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_schedule_icon"
                android:drawableEnd="@drawable/ic_schedule_icon"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/home_calendar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/holoBlue"
                android:layout_margin="10dp"
                android:text="@string/calendar"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:drawableRight="@drawable/ic_event_white_24dp"
                android:drawableEnd="@drawable/ic_event_white_24dp"
                android:drawablePadding="10dp"/>

            <Button
                android:id="@+id/home_notes_grades"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/holoBlue"
                android:layout_margin="10dp"
                android:text="@string/grades"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:drawablePadding="10dp"/>

        </LinearLayout>

    </ScrollView>

 </LinearLayout>