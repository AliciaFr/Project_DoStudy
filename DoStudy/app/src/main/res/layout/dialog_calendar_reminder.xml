<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_repeat_type_picker_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <RadioGroup
        android:id="@+id/dialog_radio_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <RadioButton
            android:id="@+id/dialog_calendar_no_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No reminder"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <RadioButton
            android:id="@+id/dialog_calendar_at_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At start"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <RadioButton
            android:id="@+id/dialog_calendar_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10 minutes before"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <RadioButton
            android:id="@+id/dialog_calendar_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30 minutes before"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_marginBottom="12dp"/>

        <RadioButton
            android:id="@+id/dialog_calendar_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Custom"
            android:textColor="@android:color/black"
            android:buttonTint="@android:color/black"
            android:layout_marginBottom="12dp"/>


    </RadioGroup>

</ScrollView>