<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/notes_title"
        android:layout_marginTop="@dimen/margin_screen_small"
        android:textColor="@color/holoBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/notes_linear_layout"
        android:layout_marginTop="@dimen/margin_screen_small"
        android:layout_below="@+id/notes_title"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/notes_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="@color/normalText" />

        <TextView
            android:id="@+id/notes_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textColor="@color/normalText" />
    </LinearLayout>
</RelativeLayout>