<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:layout_marginTop="@dimen/margin_top_bottom"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginStart="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:layout_marginEnd="@dimen/margin_left_right" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notes_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/margin_top_bottom"
            android:textColor="@color/normalText"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"/>

        <ImageView
            android:contentDescription="@string/icon_for_navigation"
            android:id="@+id/notes_details_delete"
            android:layout_width="@dimen/icon_width_delete"
            android:layout_height="@dimen/icon_height_delete"
            android:src="@drawable/ic_delete_24dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes_details_lecture_title"
        android:textAllCaps="true"
        android:textSize="@dimen/subtitle_text_size"
        android:textColor="@color/captionsGrey" />

    <TextView
        android:id="@+id/notes_details_lecture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_details"
        android:layout_marginBottom="12dp"
        android:textColor="@color/normalText"
        android:textSize="@dimen/normal_text_size"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_divider"
        android:layout_marginBottom="@dimen/margin_bottom_divider"
        android:layout_marginTop="@dimen/margin_top_divider"
        android:background="@color/divider"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/calendar_entry_details_date_title"
        android:textAllCaps="true"
        android:textSize="@dimen/subtitle_text_size"
        android:textColor="@color/captionsGrey" />

    <TextView
        android:id="@+id/notes_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_details"
        android:layout_marginBottom="12dp"
        android:textColor="@color/normalText"
        android:textSize="@dimen/normal_text_size"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/thickness_divider"
        android:layout_marginBottom="@dimen/margin_bottom_divider"
        android:layout_marginTop="@dimen/margin_top_divider"
        android:background="@color/divider"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@+id/notes_details_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_details"
        android:layout_marginBottom="12dp"
        android:textColor="@color/normalText"
        android:textSize="@dimen/normal_text_size"/>

    <ImageView
        android:contentDescription="@string/content_descripion_note_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/notes_details_image"/>

</LinearLayout>