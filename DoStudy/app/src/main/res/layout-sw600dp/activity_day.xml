<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alicia.dostudy.TimeTable.MondayActivity"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_top_bottom"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginStart="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right"
    android:layout_marginEnd="@dimen/margin_left_right" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/day"
        android:textSize="@dimen/title_text_size"
        android:layout_marginBottom="20dp"
        android:textColor="@color/holoBlue"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/day"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/course_title"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
                    android:drawablePadding="10dp"/>

                <EditText
                    android:id="@+id/course_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:hint="@string/add_course_hint"
                    android:padding="10dp"
                    android:inputType="text"
                    android:textSize="14sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/begin"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="10dp"/>

                <EditText
                    android:id="@+id/input_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="time"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:id="@+id/input_time_end"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="time"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/room"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_place_black_24dp"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:drawablePadding="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_room"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lecturer"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_person_black_24dp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:drawablePadding="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_lecturer"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="text"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_school_black_24dp"
                    android:drawableLeft="@drawable/ic_school_black_24dp"
                    android:drawablePadding="10dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/input_date"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:inputType="date"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colour"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_color_lens_black_24dp"
                    android:drawableLeft="@drawable/ic_color_lens_black_24dp"
                    android:drawablePadding="10dp"/>

                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:id="@+id/input_colour"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="@string/button"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

    <ListView
        android:id="@+id/course_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:padding="10dp" />

</LinearLayout>
