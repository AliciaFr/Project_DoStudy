<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_top_bottom"
    android:layout_marginBottom="@dimen/margin_top_bottom"
    android:layout_marginLeft="@dimen/margin_left_right"
    android:layout_marginRight="@dimen/margin_left_right" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/add_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_calendar_entry_title_hint"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:textColor="@color/normalText"
                android:maxLines="1"
                android:maxLength="80"
                android:textSize="@dimen/normal_text_size"
                android:textColorHint="@color/normalText"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="16dp"
                android:background="@color/holoBlue" />

            <EditText
                android:id="@+id/add_note_lecture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:inputType="textCapSentences"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="@string/add_note_lecture_hint"
                android:maxLines="1"
                android:maxLength="80"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/normalText"
                android:textColorHint="@color/normalText"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginBottom="25dp"
                android:background="@color/holoBlue"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/thickness_divider"
                android:layout_marginBottom="@dimen/margin_bottom_divider"
                android:layout_marginTop="@dimen/margin_top_divider"
                android:background="@color/divider"
                android:importantForAccessibility="no"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_divider"
                android:layout_marginBottom="@dimen/margin_bottom_divider">

                <TextView
                    android:id="@+id/add_note_add_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/add_note_date"
                    android:layout_toLeftOf="@+id/add_note_date"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/normalText"
                    android:maxLines="1"
                    android:ems="10"
                    android:text="@string/add_note_date_title"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:drawableStart="@drawable/ic_access_time_black_24dp"
                    android:drawablePadding="20dp"
                    android:clickable="true"/>

                <TextView
                    android:id="@+id/add_note_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/normal_text_size"
                    android:textColor="@color/normalText"
                    android:clickable="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/thickness_divider"
                android:layout_marginBottom="@dimen/margin_bottom_divider"
                android:layout_marginTop="@dimen/margin_top_divider"
                android:background="@color/divider"
                android:importantForAccessibility="no"/>

            <TextView
                android:id="@+id/add_note_add_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_divider"
                android:layout_marginBottom="@dimen/margin_bottom_divider"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/normalText"
                android:maxLines="1"
                android:ems="10"
                android:text="@string/add_note_add_picture"
                android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"
                android:drawableStart="@drawable/ic_add_a_photo_black_24dp"
                android:drawablePadding="20dp"
                android:clickable="true"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/thickness_divider"
                android:layout_marginBottom="@dimen/margin_bottom_divider"
                android:layout_marginTop="@dimen/margin_top_divider"
                android:background="@color/normalText"
                android:importantForAccessibility="no"/>


            <EditText
                android:id="@+id/add_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top_divider"
                android:layout_marginBottom="@dimen/margin_bottom_divider"
                android:ems="10"
                android:inputType="textMultiLine"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="@string/add_notes_edit_note_hint"
                android:textColor="@color/normalText"
                android:textSize="@dimen/normal_text_size"
                android:textColorHint="@color/normalText"/>

            <ImageView
                android:contentDescription=""
                android:id="@+id/add_note_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp" />

            <Button
                android:id="@+id/add_note_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_note_add_button"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_blue"
                android:clickable="true"
                android:padding="16dp"
                android:textAllCaps="false"
                android:textColor="@color/addButonText"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>